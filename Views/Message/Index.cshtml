@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Messages";
}

<div class="container mt-4">
    <h2>Messages</h2>
    
    <div class="row">
        <div class="col-md-4">
            <div class="list-group">
                @foreach (var user in Model)
                {
                    <a href="@Url.Action("Conversation", new { userId = user.Id })" 
                       class="list-group-item list-group-item-action @(user.LastMessage?.IsRead == false ? "fw-bold" : "")">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@user.Email</h5>
                            <small class="text-muted">@user.LastMessage?.CreatedAt.ToString("g")</small>
                        </div>
                        <p class="mb-1 text-truncate">@user.LastMessage?.Content</p>
                    </a>
                }
            </div>
        </div>
        <div class="col-md-8">
            <div class="alert alert-info">
                Select a conversation to view messages.
            </div>
        </div>
    </div>
</div> 