@model Profile

@{
    ViewData["Title"] = Model.Name + " - Profil";
    var isVisitor = User.IsInRole("Visitor");
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>@Model.Name</h2>
            <p>Vizibilitate: @Model.Visibility</p>

            @if (!isVisitor)
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">Creează Postare</h5>
                        <form asp-action="CreatePost" method="post">
                            <div class="form-group">
                                <textarea name="content" class="form-control" rows="3" placeholder="Scrie ceva..."></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary mt-2">Postează</button>
                        </form>
                    </div>
                </div>
            }

            <h4>Postări</h4>
            @if (Model.Posts != null && Model.Posts.Any())
            {
                foreach (var post in Model.Posts.OrderByDescending(p => p.Created))
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <p class="card-text">@post.Content</p>
                            <small class="text-muted">@post.Created.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>Nu există postări.</p>
            }

            <h4 class="mt-4">Albume</h4>
            @if (!isVisitor)
            {
                <div class="mb-3">
                    <a asp-controller="Album" asp-action="Create" class="btn btn-primary">Creează Album Nou</a>
                </div>
            }

            @if (Model.Albums != null && Model.Albums.Any())
            {
                <div class="row">
                    @foreach (var album in Model.Albums)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">@album.Title</h5>
                                    <p class="card-text">
                                        <small class="text-muted">@(album.Photos?.Count ?? 0) poze</small>
                                    </p>
                                    <a asp-controller="Profile" asp-action="ViewAlbum" asp-route-id="@album.Id" class="btn btn-primary">Vezi Album</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p>Nu există albume.</p>
            }
        </div>
    </div>
</div> 