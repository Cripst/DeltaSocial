@using DeltaSocial;
@model IEnumerable<Profile>

@{
    ViewData["Title"] = "Search Profiles";
}

<div class="container mt-4">
    <h2>Search Profiles</h2>
    
    <form asp-action="Search" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="query" class="form-control" placeholder="Search by name or email..." value="@ViewBag.Query">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No profiles found matching your search criteria.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var profile in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@profile.Name</h5>
                            <p class="card-text">
                                <small class="text-muted">Profile Visibility: @profile.Visibility</small>
                            </p>
                            <a asp-action="View" asp-route-id="@profile.UserId" class="btn btn-primary">View Profile</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div> 