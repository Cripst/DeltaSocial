@using DeltaSocial;
@model List<Profile>

@{
    ViewData["Title"] = "Cauta Profiluri";
}

<div class="container mt-4">
    <h2>Cauta Profiluri</h2>

    <form method="get" asp-controller="Profile" asp-action="Search" class="form-inline mb-4">
        <div class="form-group">
            <input type="text" name="query" class="form-control mr-2" placeholder="Cauta dupa nume..." value="@ViewBag.SearchQuery">
        </div>
        <button type="submit" class="btn btn-primary">Cauta</button>
    </form>

    @if (Model != null && Model.Any())
    {
        <h3>Rezultate cautare:</h3>
        <ul class="list-group">
            @foreach (var profile in Model)
            {
                <li class="list-group-item">
                    <a asp-controller="Profile" asp-action="ViewProfile" asp-route-id="@profile.Id">@profile.Name</a>
                </li>
            }
        </ul>
    }
    else if (ViewBag.SearchPerformed == true)
    {
        <p class="text-muted">Nu au fost gasite profiluri care sa corespunda criteriilor de cautare.</p>
    }
</div> 