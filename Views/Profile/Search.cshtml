@using DeltaSocial;
@model IEnumerable<Profile>

@{
    ViewData["Title"] = "Căutare persoane";
}

<div class="container mt-4">
    <h2>Căutare persoane</h2>

    <form asp-action="Search" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="query" class="form-control" placeholder="Caută persoane..." value="@ViewBag.SearchQuery">
            <button type="submit" class="btn btn-primary">Caută</button>
        </div>
    </form>

    @if (ViewBag.SearchPerformed)
    {
        if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var profile in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@profile.Name</h5>
                                <p class="card-text">
                                    <small class="text-muted">Vizibilitate: @profile.Visibility</small>
                                </p>
                                <div class="d-flex justify-content-between mb-3">
                                    <a asp-action="ViewProfile" asp-route-id="@profile.Id" class="btn btn-primary">Vezi Profil</a>
                                    @if (profile.Posts != null)
                                    {
                                        <span class="badge bg-secondary">@profile.Posts.Count postări</span>
                                    }
                                </div>
                                
                                @if (profile.Albums != null && profile.Albums.Any())
                                {
                                    <h6 class="mt-3">Albume:</h6>
                                    <div class="list-group">
                                        @foreach (var album in profile.Albums)
                                        {
                                            <a href="@Url.Action("ViewAlbum", "Profile", new { id = album.Id })" class="list-group-item list-group-item-action">
                                                <div class="d-flex w-100 justify-content-between">
                                                    <h6 class="mb-1">@album.Title</h6>
                                                    <small class="text-muted">@(album.Photos?.Count ?? 0) poze</small>
                                                </div>
                                            </a>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info">
                Nu am găsit niciun profil care să corespundă căutării.
            </div>
        }
    }
</div> 