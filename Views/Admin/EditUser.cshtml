@model DeltaSocial.Models.EditUserViewModel

@{
    ViewData["Title"] = "Editare Roluri Utilizator";
}

<div class="container mt-4">
    <h2>Editare Roluri pentru @Model.Email</h2>

    <form asp-action="EditUser" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Email" />
        <input type="hidden" asp-for="UserName" />

        <div class="form-group">
            <div class="form-check mb-3">
                <input type="checkbox" 
                       class="form-check-input" 
                       asp-for="IsVisitor" />
                <label class="form-check-label" asp-for="IsVisitor">Vizitator (acces limitat)</label>
            </div>

            <label>Roluri Disponibile:</label>
            <div class="mt-2">
                @foreach (var role in Model.AllRoles)
                {
                    <div class="form-check">
                        <input type="checkbox" 
                               class="form-check-input" 
                               name="SelectedRoles" 
                               value="@role"
                               @(Model.UserRoles.Contains(role) ? "checked" : "") />
                        <label class="form-check-label">@role</label>
                    </div>
                }
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Salvează Modificările</button>
            <a asp-action="Index" class="btn btn-secondary">Înapoi la Listă</a>
        </div>
    </form>
</div> 